<% include ../partials/header %>
<% include ../partials/nav %>

<div class="container">
    <h4>Title</h4>
    <div class="row">
        <% let items = [ 
            {
                name: 'Wind Shear', 
                url: "http://tropic.ssec.wisc.edu/real-time/atlantic/winds/wg8shr.GIF",
                description: 'Explanation of picture.'},
            {
                name: 'Wind Shear Tendancy', 
                url: "http://tropic.ssec.wisc.edu/real-time/atlantic/winds/wg8sht.GIF",
                description: 'Explanation of picture.'
            },
            {
                name: 'Dry Air', 
                url: "#",
                description: 'Explanation of picture.'
            },
            {
                name: 'ENSO', 
                url: "/models/ENSO.png",
                description: 'Explanation of picture.'
            }
        ]; %>
        <% items.forEach(function(item){ %>
            <div class="col-md-4">
                <div class="card mb-4">
                    <img class="card-img-top" src="<%= item.url %>"></img>
                    <div class="card-body">
                        <p class="card-text"><%= item.description %></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a class="btn btn-sm btn-outline-secondary" href="<%= item.url %>">View</a>
                            <small class="text-muted"><%= item.name %></small>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
        
    </div>
</div>

