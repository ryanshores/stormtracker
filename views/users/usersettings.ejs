<!-- User settings page -->

<% include ../partials/header %>

<link rel="stylesheet" href="/stylesheets/usersettings.css"></link>
<link rel="stylesheet" href="/stylesheets/forms.css"></link>

<% include ../partials/nav %>

<div class="container">
    <ul class="nav nav-pills" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="name-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="true">Profile</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="password-tab" data-toggle="tab" href="#password" role="tab" aria-controls="password" aria-selected="false">Password</a>
      </li>
      <li class="nav-item">
          <a class="nav-link" id="delete-tab" data-toggle="tab" href="#delete" role="tab" aria-controls="delete" aria-selected="false">Delete</a>
      </li>
    </ul>
    
    <div class="tab-content" id="myTabContent">
        
        <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <div class="form-class px-0">
                <form class="" method="POST" action="/users/<%= user._id %>/name">
                    <div class="form-label-group">
                        <input type="text" id="inputName" name="name" class="form-control" value="<%= user.name %>" required="true" autocomplete="off">
                        <label for="inputGroup">Name</label>
                    </div>
                    <button id="nameBtn" type="submit" class="btn btn-outline-dark d-none mb-3">Save</button>
                </form>
                <form class="" method="POST" action="/users/<%= user._id %>/group">
                    <div class="form-label-group">
                        <input type="text" id="inputCompany" name="group" class="form-control" value="<%= user.group %>" required="true" autocomplete="off">
                        <label for="inputCompany">Company</label>
                    </div>
                    <button id="companyBtn" type="submit" class="btn btn-outline-dark d-none">Save</button>
                </form>
            </div>
        </div>
        
        <div class="tab-pane fade" id="password" role="tabpanel" aria-labelledby="password-tab">
            <form class="form-class px-0" method="POST" action="/users/<%= user._id %>/password">
  
                <div class="form-label-group">
                    <input type="password" id="inputNewPassword" name="newPassword" class="form-control" placeholder="Enter your new password" required="true">
                    <label for="inputNewPassword">New Password</label>
                </div>
                
                <div class="form-label-group">
                    <input type="password" id="inputNewPasswordAgain" name="newPasswordAgain" class="form-control" placeholder="One more time just for good measure" required="true">
                    <label for="inputNewPasswordAgain">Confirm New Password</label>
                </div>
                 
                <button type="submit" class="btn btn-outline-dark">Submit</button>
                
            </form>
        </div>
        
        <div class="tab-pane fade" id="delete" role="tabpanel" aria-labelledby="delete-tab">
            <div class="form-class px-0">
                <form action="/users/<%=user._id%>/delete" method="POST">
                    <button type="submit" class="btn btn-danger btn-block mt-5" onClick="return confirm('Are you absolutely sure you want to delete your profile?')">Delete Profile</button>
                </form>
            </div>    
        </div>
    </div>    
</div>

<script src="/scripts/settings.js"></script>

<% include ../partials/footer %>